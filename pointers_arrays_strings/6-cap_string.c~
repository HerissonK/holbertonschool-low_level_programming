#include "main.h"

/**
 * reverse_array - returns the length of a string
 *
 * @a: the array with character
 * @n: the place in the array
 *
 */

char *cap_string(char *s)
{
	int i;

	for (i = 0; s[i] >= 'a' && s[i] <= 'z'; i++)
	{
		if (s[i - 1] == ' ' ||
		    s[i - 1] == '\t' ||
		    s[i - 1] == '\n' ||
		    s[i - 1] == ',' ||
		    s[i - 1] == ';' ||
		    s[i - 1] == '.' ||
		    s[i - 1] == '!' ||
		    s[i - 1] == '?' ||
		    s[i - 1] == '"' ||
		    s[i - 1] == '(' ||
		    s[i - 1] == ')' ||
		    s[i - 1] == '{' ||
		    s[i - 1] == '}')
		{
			if (s[i] >= 'a' && s[i] <= 'z')
			{
			s[i] = s[i] - 32;
			}
		}
	}
	return (s);
}
