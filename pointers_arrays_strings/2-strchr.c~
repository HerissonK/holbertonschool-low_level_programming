#include "main.h"

/**
 * _memcpy -  copies memory area
 *
 * @src: mermory source
 * @dest: memory destination
 * @n: numbers of bytes
 *
 * Return: return the character if not in the leet array
 */

char *_strchr(char *s, char c)
{
	int i;

	for (i = 0; (s[i] != c) && (s[i] != '\0'); i++)
		;
	if (s[i] == c)
	{
		return (s + i);
	}
	else
	{
		return (0);
	}
}
